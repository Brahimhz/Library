<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
		  http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
           version="2.5">
    
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>

    <servlet>
        <servlet-name>login</servlet-name>
        <servlet-class>MVC.Controller.ServletLogin</servlet-class>
        <init-param>
            <param-name>password</param-name>
            <param-value>admin</param-value>
        </init-param>
        <init-param>
            <param-name>user</param-name>
            <param-value>admin</param-value>
        </init-param>
    </servlet>

    <servlet-mapping>
        <servlet-name>login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>addlivre</servlet-name>
        <servlet-class>MVC.Controller.ServletLivre.ServletAddLivre</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>addlivre</servlet-name>
        <url-pattern>/addlivre</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>editlivre</servlet-name>
        <servlet-class>MVC.Controller.ServletLivre.ServletEditLivre</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>editlivre</servlet-name>
        <url-pattern>/editlivre</url-pattern>
    </servlet-mapping>


    <servlet>
        <servlet-name>deletelivre</servlet-name>
        <servlet-class>MVC.Controller.ServletLivre.ServletDeleteLivre</servlet-class>
    </servlet>
    
    <servlet-mapping>
        <servlet-name>deletelivre</servlet-name>
        <url-pattern>/deletelivre</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>addAuteur</servlet-name>
        <servlet-class>MVC.Controller.ServletAuteur.ServletAddAuteur</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>addAuteur</servlet-name>
        <url-pattern>/addAuteur</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>editAuteur</servlet-name>
        <servlet-class>MVC.Controller.ServletAuteur.ServletEditAuteur</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>editAuteur</servlet-name>
        <url-pattern>/editAuteur</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>deleteAuteur</servlet-name>
        <servlet-class>MVC.Controller.ServletAuteur.ServletDeleteAuteur</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>deleteAuteur</servlet-name>
        <url-pattern>/deleteAuteur</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>search</servlet-name>
        <servlet-class>MVC.Controller.ServletSearch</servlet-class>
    </servlet>
    
    <servlet-mapping>
        <servlet-name>search</servlet-name>
        <url-pattern>/search</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>SearchGuest</servlet-name>
        <servlet-class>MVC.Controller.ServletSearchGuest</servlet-class>
    </servlet>
    
    <servlet-mapping>
        <servlet-name>SearchGuest</servlet-name>
        <url-pattern>/SearchGuest</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>LogOut</servlet-name>
        <servlet-class>MVC.Controller.ServletLogOut</servlet-class>
    </servlet>
    
    <servlet-mapping>
        <servlet-name>LogOut</servlet-name>
        <url-pattern>/LogOut</url-pattern>
    </servlet-mapping>
    
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
        <session-config>
            <session-timeout>1  </session-timeout>
        </session-config>


</web-app>
